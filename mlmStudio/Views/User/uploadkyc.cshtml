@{
    ViewBag.Title = "uploadkyc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Upload KYC</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <div role="form">
                    <div class="box-body">
                        @*<div class="alert alert-success alert-dismissable" id="dvMsgUser" style="display:none;">
                            <i class="fa fa-apple"></i>
                            <b> Create Successfully. </b>
                        </div>*@
                        @using (Html.BeginForm("uploadkyc", "user", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <label>Upload PAN Card</label>
                                @Html.TextBox("pan", "", new { type = "file", @class = "form-control", accept = "image/*" })<br />
                            </div>

                            <div class="form-group">
                                <label>Upload Bank Proof</label>
                                @Html.TextBox("bank", "", new { type = "file", @class = "form-control", accept = "image/*" })<br />
                            </div>
                            <div class="form-group">
                                <label>Upload Photo</label>
                                @Html.TextBox("photo", "", new { type = "file", @class = "form-control", accept = "image/*" })<br />
                            </div>
                            <div class="form-group">
                                <label>Upload Address Proof</label>
                                @Html.TextBox("address", "", new { type = "file", @class = "form-control", accept = "image/*" })<br />
                            </div>

                            <div class="box-footer">
                                <input type="submit" value="Upload" class="btn btn-primary" />
                                @ViewBag.Message
                            </div>
                       }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

