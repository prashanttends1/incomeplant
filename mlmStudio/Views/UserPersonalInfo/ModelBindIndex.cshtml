@model IEnumerable<mlmStudio.Models.UserPersonalInfo>

    @{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>UserPersonalInfo List </small>
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">

                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <h3 class="box-title">User Records</h3>
                    </div><!-- /.box-header -->

                    <div class="box-body table-responsive">

                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                        <br /><br />
                        <div class="widget-sec">
                            <div class="streaming-table">
                                <span id="found" class="label label-info"></span>

                                <table id="tbPages" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>

                                            <th> Id  </th>
                                            <th> First Name  </th>
                                            <th> Last Name  </th>
                                            <th> Gender  </th>
                                            <th> About  </th>
                                            <th> Profile Image  </th>
                                            <th> Date Join  </th>
                                            <th> User  </th>
                                            <th> Middle Name  </th>
                                            <th> Email  </th>
                                            <th> Father And Spouse Name  </th>
                                            <th> D O B  </th>
                                            <th> Mother Name  </th>
                                            <th> Nomine Name  </th>
                                            <th> City  </th>
                                            <th> Zip Code  </th>
                                            <th> Pan Number  </th>
                                            <th> Education Detail  </th>
                                            <th> Last Employee Firm  </th>
                                            <th> Last Employee Year  </th>
                                            <th> Last Employee Anual Income  </th>
                                            <th> Is Active  </th>


                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model) 
                                        {
                                            <tr>
                                            <td> @Html.DisplayFor(modelItem => item.Id) </td>                                            <td> @Html.DisplayFor(modelItem => item.FirstName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LastName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Gender_GenderId.Name) </td>
                                            <td> @Html.DisplayFor(modelItem => item.About) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ProfileImage) </td>
                                            <td> @Html.DisplayFor(modelItem => item.DateJoin) </td>
                                            <td> @Html.DisplayFor(modelItem => item.User_UserId.Username) </td>
                                            <td> @Html.DisplayFor(modelItem => item.MiddleName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Email) </td>
                                            <td> @Html.DisplayFor(modelItem => item.FatherAndSpouseName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.DOB) </td>
                                            <td> @Html.DisplayFor(modelItem => item.MotherName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.NomineName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.City_CityId.Name) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ZipCode) </td>
                                            <td> @Html.DisplayFor(modelItem => item.PanNumber) </td>
                                            <td> @Html.DisplayFor(modelItem => item.EducationDetail) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LastEmployeeFirm) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LastEmployeeYear) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LastEmployeeAnualIncome) </td>
                                            <td> @Html.DisplayFor(modelItem => item.IsActive) </td>

                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id=item.Id}) |
                                                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                                                </td>

                                            </tr>
                                       }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="box-footer">
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </section>


