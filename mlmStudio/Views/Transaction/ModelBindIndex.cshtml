@model IEnumerable<mlmStudio.Models.Transaction>

    @{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>Transaction List </small>
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">

                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <h3 class="box-title">User Records</h3>
                    </div><!-- /.box-header -->

                    <div class="box-body table-responsive">

                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                        <br /><br />
                        <div class="widget-sec">
                            <div class="streaming-table">
                                <span id="found" class="label label-info"></span>

                                <table id="tbPages" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>

                                            <th> Id  </th>
                                            <th> Title  </th>
                                            <th> Date Added  </th>
                                            <th> Added By  </th>
                                            <th> Company Office  </th>
                                            <th> Debit Ledger Account  </th>
                                            <th> Debit Amount  </th>
                                            <th> Credit Ledger Account  </th>
                                            <th> Credit Amount  </th>
                                            <th> Transaction Date  </th>


                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model) 
                                        {
                                            <tr>
                                            <td> @Html.DisplayFor(modelItem => item.Id) </td>                                            <td> @Html.DisplayFor(modelItem => item.Title) </td>
                                            <td> @Html.DisplayFor(modelItem => item.DateAdded) </td>
                                            <td> @Html.DisplayFor(modelItem => item.AddedBy) </td>
                                            <td> @Html.DisplayFor(modelItem => item.CompanyOfficeId) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LedgerAccount_DebitLedgerAccountId.Title) </td>
                                            <td> @Html.DisplayFor(modelItem => item.DebitAmount) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LedgerAccount_CreditLedgerAccountId.Title) </td>
                                            <td> @Html.DisplayFor(modelItem => item.CreditAmount) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TransactionDate) </td>

                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id=item.Id}) |
                                                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                                                </td>

                                            </tr>
                                       }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="box-footer">
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </section>


