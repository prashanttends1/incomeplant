@model mlmStudio.Models.Product

@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}


@Html.StarkAjaxFormSubmiter("frmProduct", "tbProduct", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                <small>@ViewBag.Title</small>
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of Product</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">
                    <div class="alert alert-success alert-dismissable" id="dvMsgProduct" style="display:none;">
                        <i class="fa fa-apple"></i>
                        <b> Delete Successfully. </b>
                    </div>
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>Name</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <td>PurchaseCost</td>
                                    <td>@Html.DisplayFor(model => model.PurchaseCost)</td>
                                </tr>
                                <tr>
                                    <td>SalePrice</td>
                                    <td>@Html.DisplayFor(model => model.SalePrice)</td>
                                </tr>
                                <tr>
                                    <td>IsActive</td>
                                    <td>@Html.DisplayFor(model => model.IsActive)</td>
                                </tr>
                                <tr>
                                    <td> &nbsp;</td>
                                    <td> <img src="~/Uploads/@Model.ProductImage" width="200" /> </td>
                                </tr>
                                <tr>
                                    <td>BareCode</td>
                                    <td>@Html.DisplayFor(model => model.BareCode)</td>
                                </tr>
                                <tr>
                                    <td> Description</td>
                                    <td>  @Html.Raw(Model.Description)</td>
                                </tr>
                                <tr>
                                    <td>Manufacturer</td>
                                    <td>@Html.DisplayFor(model => model.Manufacturer)</td>
                                </tr>
                                <tr>
                                    <td>ProductCategoryId</td>
                                    <td>@Html.DisplayFor(model => model.ProductCategoryId)</td>
                                </tr>


                            </table>
                            <div class="box-footer">

                                  @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new {  id = "frmProduct" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.StarkInputButtion("Delete","submit","btn btn-danger","")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



