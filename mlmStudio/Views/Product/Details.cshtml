@model mlmStudio.Models.Product

@{
    ViewBag.Title = "Details";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}
<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>Details</small>
    </h1>
</section>
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of Product</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>Name</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <td>PurchaseCost</td>
                                    <td>@Html.DisplayFor(model => model.PurchaseCost)</td>
                                </tr>
                                <tr>
                                    <td>SalePrice</td>
                                    <td>@Html.DisplayFor(model => model.SalePrice)</td>
                                </tr>
                                <tr>
                                    <td>IsActive</td>
                                    <td>@Html.DisplayFor(model => model.IsActive)</td>
                                </tr>
                                <tr>
                                    <td> &nbsp;</td>
                                    <td> <img src="~/Uploads/@Model.ProductImage" width="200" /> </td>
                                </tr>
                                <tr>
                                    <td>BareCode</td>
                                    <td>@Html.DisplayFor(model => model.BareCode)</td>
                                </tr>
                                <tr>
                                    <td> Description</td>
                                    <td>  @Html.Raw(Model.Description)</td>
                                </tr>
                                <tr>
                                    <td>Manufacturer</td>
                                    <td>@Html.DisplayFor(model => model.Manufacturer)</td>
                                </tr>
                                <tr>
                                    <td>ProductCategoryId</td>
                                    <td>@Html.DisplayFor(model => model.ProductCategoryId)</td>
                                </tr>

 
                            </table>
                            <div class="box-footer">
                                @Ajax.ModalDialogActionLink("Edit", "Edit/" + Model.Id, "Edit", "btn btn-primary") 
                                 
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



