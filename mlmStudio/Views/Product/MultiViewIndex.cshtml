@model mlmStudio.Models.Product
@{
    ViewBag.Title = "Advance Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section ScriptsOrCss
{
    <script src="~/Content/DataTable/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/DataTable/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <link href="~/Content/DataTable/plugins/dataTables.bootstrap.css" rel="stylesheet" /> 
   
    <script src="~/Content/ckEditor/ckeditor.js"></script>
    <link href="~/Content/ckEditor/samples/sample.css" rel="stylesheet" />
    <script src="~/Content/tabs/Jquery-ui.js"></script>
    <link href="~/Content/tabs/JqueryUi.css" rel="stylesheet" />
    <script>
        $(function () {
            //var tabs = $("#tabs").tabs();
            //tabs.find(".ui-tabs-nav").sortable({
            //    axis: "x",
            //    stop: function () {
            //        tabs.tabs("refresh");
            //    }
            //});

            $("#tabs").tabs().addClass("ui-tabs-vertical ui-helper-clearfix");
            $("#tabs li").removeClass("ui-corner-top").addClass("ui-corner-left");

            $("#dialog").dialog({
                autoOpen: false,
                show: {
                    effect: "blind",
                    duration: 1000
                },
                hide: {
                    effect: "explode",
                    duration: 1000
                }
            });
            $("#opener").click(function () {
                $("#dialog").dialog("open");
            });

        });
    </script>

    <style>
        table {
            width: 100% !important;
        }
       .ui-tabs-vertical {
          width: 100%;
        }

        .ui-tabs-vertical .ui-tabs-nav {
            padding: .2em .1em .2em .2em;
            float: left;
            width: 19%;
        }

            .ui-tabs-vertical .ui-tabs-nav li {
                clear: left;
                width: 100%;
                border-bottom-width: 1px !important;
                border-right-width: 0 !important;
                margin: 0 -1px .2em 0;
            }

                .ui-tabs-vertical .ui-tabs-nav li a {
                    display: block;
                }

                .ui-tabs-vertical .ui-tabs-nav li.ui-tabs-active {
                    padding-bottom: 0;
                    padding-right: .1em;
                    border-right-width: 1px;
                }

        .ui-tabs-vertical .ui-tabs-panel {
            padding: 1em;
            float: right;
            width:80%;
        }
    </style>
}
 
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
</section>
<script type="text/javascript">
        $(function () { 
            $('select').searchableOptionList({
                maxHeight: '250px'
            });
        });
</script>

@Html.StarkAjaxFormSubmiter("frmProduct", "tbProduct", true, "Action Successfully Executed")
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-solid box-primary">

 
                             <div id="tabs">
                                <ul>
                                    <li><a href="#EditThis">Edit</a></li>
                                    
                                </ul>
                                <div id="EditThis" style="height:700px;overflow:auto;">
                                   @using (Html.BeginForm("MultiViewIndex", "Product", FormMethod.Post, new { enctype = "multipart/form-data",id = "frmProduct" }))
                            {
                                @Html.AntiForgeryToken()

                                if (ViewBag.IsWorking >0)
                                {
                                    <section class="content">
                                        <!-- Small boxes (Stat box) -->
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="box box-solid box-primary">
                                                    <div class="box-header">
                                                        <h3 class="box-title">Edit Product Info</h3>
                                                    </div><!-- /.box-header -->
                                                    <!-- form start -->
                                                    <div role="form">
                                                        <div class="box-body">
                                                    <div class="alert alert-success alert-dismissable" id="dvMsg" style="display:@(TempData["Display"]==null ? "none" : "")">
                                                        <i class="fa fa-apple"></i>
                                                        <b> Update Successfully. </b>
                                                    </div>
                                                            

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { @class = "" })
                                @Html.EditorFor(model => model.Name) @Html.ValidationMessageFor(model => model.Name)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PurchaseCost, new { @class = "" })
                                @Html.EditorFor(model => model.PurchaseCost) @Html.ValidationMessageFor(model => model.PurchaseCost)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.SalePrice, new { @class = "" })
                                @Html.EditorFor(model => model.SalePrice) @Html.ValidationMessageFor(model => model.SalePrice)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.IsActive, new { @class = "" })
                                @Html.EditorFor(model => model.IsActive) @Html.ValidationMessageFor(model => model.IsActive)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ProductImage, new { @class = "" })
                                <input id="ProductImage" name="ProductImage" type="file" />
                                <input type="hidden" name="HideImage1" value="@Model.ProductImage" />
                                @Html.ValidationMessageFor(model => model.ProductImage)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.BareCode, new { @class = "" })
                                @Html.EditorFor(model => model.BareCode) @Html.ValidationMessageFor(model => model.BareCode)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new { @class = "" })
                                @Html.TextAreaFor(model => model.Description, new { @class = "ckeditor" }) @Html.ValidationMessageFor(model => model.Description)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Manufacturer, new { @class = "" })
                                @Html.EditorFor(model => model.Manufacturer) @Html.ValidationMessageFor(model => model.Manufacturer)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ProductCategoryId, new { @class = "" })
                                @Html.DropDownList("ProductCategoryId"," -Select- ") 
                                @Html.ValidationMessageFor(model => model.ProductCategoryId)
                                @Html.StarkDropDownAjaxLink("/ProductCategory/Create", "AddMore","")
                            </div>
                                                             


                                                        </div><!-- /.box-body -->
                                                        <div class="box-footer">
                                                            @Html.StarkInputButtion("Save","submit","btn btn-primary","")
                                                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                }
                            }
                                </div>
                                 

                            </div>
                              
                    

            </div>
        </div>
    </div>
</section>
  

